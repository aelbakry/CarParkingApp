<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="bookings.scss">
<%= render "shared/header" %>

<div class="bg">

  <div class="container-title">
    <div class="row">
      <div class="col-sm">
        <%= t('booking.id') %>
      </div>

      <div class="col-sm">
        <%= t('parking.name') %>
      </div>

      <div class="col-sm">
        <%= t('paking.postcode') %>
      </div>

      <div class="col-sm">
        <%= t('booking.date') %>
      </div>


    </div>
    </div>


  <% @bookings.each do |booking| %>
  <div class="container-background">

    <div class="container-data">

    <div class="row">

      <div class="col-sm">
        <%= booking.id %>
      </div>

      <div class="col-sm">
        <%= booking.parking.name %>
      </div>

      <div class="col-sm">
        <%= booking.parking.postcode %>
      </div>

      <div class="col-sm">
        <%= booking.date %>
      </div>
    </div>

    </div>

    <div class="container-buttons mr-auto">


    <div class="row justify-content-center">

    <div class="col-sm ml-auto">
      <%= link_to 'Show', booking, :class => "btn btn-show" %>
    </div>

    <div class="col-sm mx-auto">
      <%= link_to 'Edit', edit_booking_path(booking), :class => "btn btn-edit" %>
    </div>

    <div class="col-sm mr-auto">
      <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-delete" %>
    </div>

    </div>
  </div>




    </div>
    <% end %>


</div>
