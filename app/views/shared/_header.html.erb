<header class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header mr-auto">
      <a class="navbar-brand" >
        <%= link_to(image_tag("logo.jpg", :size => '160x46'), root_path) %>
      </a>
    </div>
    <div class="ml-auto p-2">

           <%= link_to t('header.contact'), contact_path, :class => "navbar-nav" %>

   </div>

   <div>
     <% unless user_signed_in? %>
<%= link_to t('header.signup'), new_user_registration_path , :class => "navbar-nav" %>
<% end %>

</div>


  <div class="dropdown">

    <button class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

            <% if user_signed_in? %>
            <% @myuser = current_user %>
            <%= link_to t('header.account'), account_display_path(@myuser.id), :class => "navbar-nav"  %>
            <% end %>
    </button>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">

      <a>
        <% if user_signed_in? %>
        <% @myuser = current_user %>
        <%= link_to t('header.profile'), account_display_path(@myuser.id), :class => "dropdown-item" %>
        <%= link_to t('header.bookings'), bookings_path, :class => "dropdown-item" %>
        <%= link_to t('header.logout'), destroy_user_session_path, method: :delete, :class => "dropdown-item" %>
        <% else %>
        <%= link_to t('header.signin'), new_user_session_path, :class => "dropdown-item" %>
        <% end %>

      </a>


    </div>
  </div>
  </div>
</header>
