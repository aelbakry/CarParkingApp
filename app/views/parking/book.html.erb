<link rel="stylesheet" href="parking.scss">
<%= render "shared/header" %>

<div class="bg">

  <div class="container">
    <div class="row">
      <div class="col-sm">
        <%= t('parking.name') %>
      </div>
      <div class="col-sm">
        <%= @parking.name %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <%= t('parking.address') %>
      </div>
      <div class="col-sm">
        <%= @parking.address %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <%= t('parking.city') %>
      </div>
      <div class="col-sm">
        <%= @parking.location %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <%= t('parking.postcode') %>
      </div>
      <div class="col-sm">
        <%= @parking.postcode %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <%= t('parking.cost') %>
      </div>
      <div class="col-sm">
        <%= @parking.cost %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <%= t('parking.notes') %>
      </div>
      <div class="col-sm">
        <%= @parking.notes %>
      </div>
    </div>
  </div>
  <div class="offset-5">
      <%= link_to "Book Now!", new_booking_path(parking_id: @parking), :class => "btn btn-book " %>
  </div>
</div>

