<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="parkings.scss">
<%= render "shared/header" %>

<div class="card-columns">
<% @results.each do |result| %>
<div class="card" >
  <div>
  <span class="label label-primary"> <%= result.empty_spaces %></span>
  <span class="label label-secondary"> available slots...</span>
  </div>
  <div class="card-body">
    <span class="card-title"> <%= result.name %> </span> <br>
    <span class="card-text"> <%= result.location %> </span> <br>
    <span class="card-text"> <%= result.postcode %> </span> <br>
    <span class="offset-3"> <%=  link_to 'View', book_path( result.id ) , :class => "btn btn-info" %> </span>
  </div>
</div>
<% end %>
</div>
