<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="contact.scss">
<%= render "shared/header" %>
<div class="container-title">
  <h1>
  <%= t('contact.title') %>
  </h1>
  <h2>
  <%= t('contact.contact_us') %>
  </h2>

</div>
<div class="container-main">
  <%= form_tag request_contact_path, method: 'post' do %>
<div class ="container-body">
  <a> <%= label_tag :name, t('contact.name') %> </a>
  <%= text_field_tag :name, '', title: t('contact.enter_name'), :id => "name_field", :required => 'required' %>
  <a> <%= label_tag :email, t('contact.email') %> </a>
  <%= email_field_tag :email, '', title: t('contact.enter_email'), :id => "email_field", :required => 'required' %>
  <a> <%= label_tag :telephone, t('contact.telephone') %> </a>
  <%= telephone_field_tag :telephone, '', title: t('contact.enter_telephone'), :id => "telephone_field", :required => 'required' %>
</div>
<div class="container-message">
<a> <%= label_tag :message, t('contact.message') %> </a>
<%= text_field_tag :message, '', title: t('contact.enter_message'), size: 100 %>
</div>

<div class="offset-5">
<a><%= submit_tag  t('contact.submit'), :class => "btn btn-contact", :id => "contact_button" %></a>
</div>
<% end %>



</div>
